<div class="container">
  <div class="row">
    <div class="large-2 columns">
      <p> </p>
    </div>
    <div class="large-8 columns">
      <div class="panel">
                <%= form_for(@post) do |f| %>
                  <% if @post.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

                      <ul>
                      <% @post.errors.full_messages.each do |msg| %>
                        <li><%= msg %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>

                  <div class="field">
                    <%= f.label :title %>
                    <%= f.text_field :title  %>
                  </div>
                  <div class="field">
                    <%= f.label :description %>
                    <%= f.text_field :description  %>
                  </div>
                  <div class="field">
                    <%= f.label :image %>
                    <%= f.text_field :image  %>
                    <a class="button small" onclick="previewPic()">Preview image</a>
                  </div>
                  <div class="field">
                    <div class="row">
                      <div class="large-9 columns">
                        <label>Image Preview</label>
                        <img src="http://www.penleehouse.org.uk/assets/uploads/collections/large_890755a.jpg" id="gifimg" >
                      </div>
                      <div class="large-3 columns">
                        <%= f.label :time %>
                        <%= f.datetime_select :time%>
                        </div>
                    </div>
                  </div>

                  <%= f.hidden_field(:user_id, :value => User.find_by_email(current_user.email).send(:id)) %>

                  <!--
                  <div class="field">
                    %= f.label :user_id %><br />
                    %= f.collection_select :user_id, User.all , :id, :email %>

                  </div> -->
                  <br />
                  <div class="actions">
                    <%= f.submit %>
                  </div>
                <% end %>

                </div>
                </div>
                <div class="large-2 columns">
                  <p> </p>
                </div>
                </div>
                </div>


<script type="text/javascript">
    function previewPic()
    {
            var img;
            img = document.getElementById("post_image").value;
            document.getElementById('gifimg').src=img;
    }
</script>
