<h1>The FootyFeed</h1>

<%= link_to 'New Post', new_post_path %>

<br />
<br />

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Image</th>
    <th>Time</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.description %></td>
    <td><img src="<%= post.image %>" alt="<%= post.title %>"></td>
    <td><%= post.time %></td>
    <td><%= link_to post.user_name, post.user%></td>
    <td><%= link_to 'Expand', post %></td>
    <% if post.user_email == current_user.email %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% else %>
        <td><%= 'Edit' %></td>
        <td><%= 'Destroy' %></td>
    <% end %>
  </tr>
<% end %>
</table>

