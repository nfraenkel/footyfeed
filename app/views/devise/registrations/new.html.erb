

<div class="container">
    <div class="row">
        <div class="large-2 columns">
          <p> </p>
        </div>
        <div class="large-8 columns">
            <div class="panel">
                <h2>Sign up</h2>

                <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>

                  <div><%= f.label :first %>
                  <%= f.text_field :first, :autofocus => true %></div>

                  <div><%= f.label :last %>
                  <%= f.text_field :last, :autofocus => true %></div>

                  <div><%= f.label :email %>
                  <%= f.email_field :email, :autofocus => true %></div>

                  <div><%= f.label :password %>
                  <%= f.password_field :password %></div>

                  <div><%= f.label :password_confirmation %>
                  <%= f.password_field :password_confirmation %></div>

                  <div><%= f.label 'Profile Image Link' %>
                    <%= f.text_field :profimage %></div>
                  <div class="row">
                       <div class="large-4 column">
                         <div class="row"><p> </p></div>
                         <div class="row"><p> </p></div>
                         <a class="button small" style="text-align: right" onclick="previewPic()">Preview image</a>
                       </div>
                        <div class="large-8 column">
                          <img src="http://www.penleehouse.org.uk/assets/uploads/collections/large_890755a.jpg" id="gifimg" >
                        </div>


                    </div>
                  <br />
                  <div style="text-align: center;"><%= f.submit "Sign up" %></div>
                <% end %>

                <%= render "devise/shared/links" %>
            </div>
        </div>
        <div class="large-2 columns">
          <p> </p>
        </div>
    </div>
</div>




<script type="text/javascript">
    function previewPic()
    {
        var img;
        img = document.getElementById("user_profimage").value;
        document.getElementById('gifimg').src=img;
    }
</script>